{
	"manifest_version": 3,
	"name": "Rich Text Copy",
	"version": "1.0",
	"description": "Copy selected text as rich-text hyperlink",
	"permissions": [
		"activeTab",
		"contextMenus",
		"scripting"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"getSelection.js"
			],
			"matches": [
				"http://*/*",
				"https://*/*"
			]
		}
	],
	"action": {
		"default_title": "Copy"
	},
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	}
}
